 
$lem: 1.25;
$text-width: $lem * 15;

@include laptop-and-up {
  $lem: 1.56;
  $text-width: $lem * 15;
  
}

@include desktop-and-up {
  $lem: 1.875;
  $text-width: $lem * 15;
  
}


@mixin responsive-typography {  
  font-size: 100%;
  line-height: 1.25;
  
  @include laptop-and-up {
    font-size: 125%;
    line-height: 1.56;
    
  }
  
  @include desktop-and-up {
    font-size: 150%;
    line-height: 1.875;
    
  }
  
} 