
// All color codes
$white: hsla(0, 0, 100%, 1);
$black: hsla(170, 45%, 5%, 1);
$iorad-blue: hsla(209, 53%, 38%, 1);
$iorad-green: hsla(154, 71%, 43%, 1);
$inu-black: hsl(223, 19%, 38%);
$occrp-red: hsla(1, 3%, 48%, 1);
$occrp-blue: hsla(204, 73%, 55%, 1);
$anvelocom-brown: hsla(14, 27%, 27%, 1);
$anvelocom-green: hsla(104, 36%, 53%, 1);
$scatter-brown: hsla(26, 56%, 78%, 1);
$scatter-brown: hsla(26, 56%, 78%, 1);
$scatter-blue: hsla(203, 84%, 71%, 1);
$smuff-orange: hsl(59, 88%, 58%);
$smuff-green: hsl(178, 67%, 62%);


// All color pairs
@mixin colors($scheme: black-on-white) {
   @if ($scheme == black-on-white) {
      color: $black;
      background-color: $white;
  } @if ($scheme == white-on-black) {
      color: $white;
      background-color: $black;
  }
}


