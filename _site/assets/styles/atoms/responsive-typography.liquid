 
$lem: 1.25em !global;
$text-width: $lem * 15 !global;

@include laptop-and-up {
  $lem: 1.56em !global;
  $text-width: $lem * 15 !global;
  
}

@include desktop-and-up {
  $lem: 1.56em !global;
  $text-width: $lem * 15 !global;
  
}


@mixin responsive-typography { 
  @include mobile {
    font-size: 100%;
    line-height: 1.56;
    
  }
   
  font-size: 125%;
  line-height: 1.56;
  
  @include desktop-and-up {
    font-size: 150%;
    line-height: 1.56;
    
  }
  
}