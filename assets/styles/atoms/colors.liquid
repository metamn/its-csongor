
// All color codes
$white: hsla(0, 0, 97.5%, 1);
$black: hsla(0, 0%, 10%, 1);
$red: hsla(0, 100%, 50%, 1);
$gray: hsla(0, 0%, 40%, 1);
$iorad-green: hsla(154, 71%, 43%, 1);
$occrp-red: hsla(359, 65%, 36%, 1);
$anvelocom-pink: hsla(344, 75%, 81%, 1);


// All color pairs
@mixin colors($scheme: black-on-white) {
   @if ($scheme == black-on-white) {
      color: $black;
      background-color: $white;
  } @if ($scheme == white-on-black) {
      color: $white;
      background-color: $black;
  } @if ($scheme == white-on-blue) {
      color: $white;
      background-color: $iorad-blue;
  }
}


// All color codes collected in a list
$colors: hsla(0, 0, 97.5%, 1), hsla(0, 0%, 10%, 1), hsla(0, 100%, 50%, 1), hsla(0, 0%, 40%, 1), hsla(154, 71%, 43%, 1), hsla(359, 65%, 36%, 1), hsla(344, 75%, 81%, 1);


// All color pairs collected in a list
$color-pairs: black-on-white, white-on-black, white-on-blue; 