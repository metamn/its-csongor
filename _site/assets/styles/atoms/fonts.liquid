
// Served from Typekit



// Special font mixins
@mixin font($type: body) { 
  @if ($type == body) {
    font-family: "Europe", sans-serif;
    font-weight: 400;
    
  }
  @if ($type == title) {
    font-family: "Europe", sans-serif;
    font-weight: 700;
    font-size: $heading-level-1;
    
  }
  @if ($type == subtitle) {
    font-family: "Europe", sans-serif;
    font-weight: 300;
    font-style: italic;
    
  }
  @if ($type == services) {
    font-family: "Europe", sans-serif;
    font-weight: 700;
    border-bottom: 1px solid;
    
  }
}


// A list of all font families
$font-families: Europe;


// A list of all font mixins
$font-mixins: body, title, subtitle, services;